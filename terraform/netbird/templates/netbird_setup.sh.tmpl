#!/usr/bin/env bash
set -euo pipefail

LOGFILE="/var/log/netbird-setup.log"
install -m 0644 /dev/null "$LOGFILE" || true
exec > >(tee -a "$LOGFILE") 2>&1

echo "[$(date -Is)] Starting NetBird + Docker setup"

WORKDIR="/home/linuxuser/netbird"
install -d -m 0755 -o linuxuser -g linuxuser "$WORKDIR"
cd "$WORKDIR"
ln -sf "$LOGFILE" "$WORKDIR/setup.log" || true

export DEBIAN_FRONTEND=noninteractive
export LC_ALL=C

apt-get update -y
apt-get install -y --no-install-recommends ca-certificates curl gnupg lsb-release

install -m 0755 -d /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg -o /etc/apt/keyrings/docker.asc
chmod a+r /etc/apt/keyrings/docker.asc

. /etc/os-release
CODENAME="$${UBUNTU_CODENAME:-$${VERSION_CODENAME}}"

echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.asc] https://download.docker.com/linux/ubuntu $${CODENAME} stable" \
  | tee /etc/apt/sources.list.d/docker.list > /dev/null

apt-get update -y

apt-get install -y --no-install-recommends \
  docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

usermod -aG docker linuxuser

export NETBIRD_DOMAIN="${subdomain_name}.${domain_name}"

curl -sSLO https://github.com/netbirdio/netbird/releases/latest/download/getting-started-with-zitadel.sh
chmod +x getting-started-with-zitadel.sh
bash ./getting-started-with-zitadel.sh

echo "[$(date -Is)] Setup complete"
